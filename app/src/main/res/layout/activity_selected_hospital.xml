<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectedHospitalActivity"
    android:background="#dae0e7"
    android:orientation="vertical">


    <include
        layout="@layout/app_bar_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">



        <TextView
            android:id="@+id/htextViewA"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Details : "
            android:textAlignment="viewStart"
            android:textSize="30dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:textColor="@color/black"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="20dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tvSelectedHospitalName"
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:textColor="#6b6f73"/>

                <TextView
                    android:id="@+id/tvSelectedHospitalAddress"
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:textSize="30dp"
                    android:textColor="#6b6f73"/>
                <TextView
                    android:id="@+id/tvSelectedHospitalLocation"
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:textSize="30dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tvSelectedHospitalState"
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:textSize="30dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tvSelectedHospitalNum"
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:textSize="30dp"
                    android:textColor="#0016ff" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>